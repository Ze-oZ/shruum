<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fabBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.93"
        android:background="?android:attr/colorBackground"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/fabScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fabL"
        android:layout_alignEnd="@id/fabL"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/fabNewL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fabImportL"
            android:layout_alignEnd="@id/fabImportL">

            <TextView
                android:id="@+id/fabNewT"
                style="@style/MoneroFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:text="@string/fab_receive" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/fabNewT"
                android:elevation="6dp"
                android:src="@drawable/ic_hand"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:enabled="false"
                app:pressedTranslationZ="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fabImportL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/fabImportT"
                style="@style/MoneroFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:text="@string/fab_send" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabImport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/fabImportT"
                android:elevation="6dp"
                android:src="@drawable/ic_send"
                app:borderWidth="0dp"
                app:fabSize="mini"
                android:enabled="false"
                app:pressedTranslationZ="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fabLedgerL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/fabLedgerT"
                style="@style/MoneroFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:text="@string/fab_restore_ledger" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabLedger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toEndOf="@+id/fabLedgerT"
                android:elevation="6dp"
                android:src="@drawable/ic_ledger_restore"
                app:borderWidth="0dp"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fabL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient_oval"
        android:elevation="6dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:backgroundTint="@android:color/transparent"
            android:backgroundTintMode="src_in"
            android:src="@drawable/ic_add"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="normal"
            app:pressedTranslationZ="0dp"
            app:tint="?attr/toolbarTextColor" />
    </LinearLayout>

</RelativeLayout>
